<!doctype html>
<html lang="en">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
      
  <script src="https://kit.fontawesome.com/7968cc1663.js" crossorigin="anonymous"></script>
  <%- include('../partials/head.ejs') %> 
  <body>
    <%- include('../partials/header.ejs') %>
    <main> 

      <section class="container">
            <article>
                
                <% if (miProducto.descuento == 30) { %>
                  <img class="descuento" src="/img/promo30.png" alt="Descuento 30%">
                <% } else if(miProducto.descuento == 15){%>
                  <img class="descuento" src="/img/promo15.png" alt="Descuento 15%">
                <%}%>
                <div class="card-body">
                  <img src="/img/productos/<%=miProducto.image%>"> 
                  <h5 class="card-title"><%= miProducto.nombre%></h5>
                  <h5 class="card-title">$ <%= miProducto.precio %></h5>
                  <p class="card-text"><%= miProducto.descripcion %></p>
                  
                </div>
                <a href="/admin" class="btn btn-danger">Volver</a>
            </article>
      </section>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>

