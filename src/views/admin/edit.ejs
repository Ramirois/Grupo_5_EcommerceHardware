<!doctype html>
<html lang="es">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
      
    <!--Enlace a Fontawesone  (Para lograr disponer los iconos)-->
    <script src="https://kit.fontawesome.com/7968cc1663.js" crossorigin="anonymous"></script>
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header.ejs') %>
     

            <div class="container">
                <div class="card-body">
                    <h2 class="display-5  text-center pt-2">Actualizar un Producto</h2>
                  </div>
                <div class="row" >
                    <div class="col-8 mx-auto bg-light ">
                        <div class="create-form">
                            <form action="/admin/edit/<%= productoEditar.id%>?_method=PUT
                            " method="POST"  >
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nombre" placeholder="Nombre" required="required" value="<%= productoEditar.nombre%>">
                                </div>	
                                <div class="form-group">
                                    <input type="text" class="form-control" name="descripcion" placeholder="Descripción" required="required" value="<%= productoEditar.descripcion%>">
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control" name="precio" placeholder="Indique el precio" required="required" value="<%= productoEditar.precio%>">
                                </div>
                                <div class="form-group">
                                    <select  name="descuento" class="custom-select" id="validationCustom04" required>
                                      <option disabled value="#">Seleccione un descuento"</option>
                                      <option value="0" <%= productoEditar.descuento == 0 ? "selected" : null %>
                                        >Sin descuento</option>
                                      <option value="15" <%= productoEditar.descuento == 15 ? "selected" : null %>>15%</option>
                                      <option value="30" <%= productoEditar.descuento == 30 ? "selected" : null %>>30%</option>
                                    </select>
                                </div>
                                <!--Aquí solicito la imagen-->
                                
                                <div class="form-group">
                                    <button type="submit" class="boton-continuar">Actualizar</button>
                                    <a href="/admin" class="boton-continuar">Volver</a>
                                </div>
                                
                            </form>
                    </div>                        
                    </div>
                </div>
            </div>
     <%- include('../partials/footer.ejs') %>
</body>
</html>