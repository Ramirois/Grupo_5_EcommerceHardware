<!doctype html>
<html lang="es">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
      
    <!--Enlace a Fontawesone  (Para lograr disponer los iconos)-->
    <script src="https://kit.fontawesome.com/7968cc1663.js" crossorigin="anonymous"></script>
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header.ejs') %>
     

            <div class="container">
                <div class="card-body">
                    <h2 class="display-5  text-center pt-2">Actualizar un Producto</h2>
                  </div>
                <div class="row" >
                    <div class="col-8 mx-auto bg-light ">
                        <div class="create-form">
                            <form action="/admin/edit/<%= producto.id%>?_method=PUT
                            " method="POST"  >
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nombre" placeholder="Nombre" required="required" value="<%=producto.name%>">
                                </div>	
                                <div class="form-group">
                                    <input type="text" class="form-control" name="descripcion" placeholder="Descripción" required="required" value="<%=producto.description%>">
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control" name="precio" placeholder="Indique el precio" required="required" value="<%=producto.price%>">
                                </div>
                                <div class="form-group">
                                    <label for="">Categoría</label>
                                    <select  name="categoria" class="custom-select" id="validationCustom04" required>
                                      <option selected disabled value="#">Seleccione categoría</option>
                                      <%categorias.forEach((categoria)=>{%>
                                        <%if(categoria.id == producto.category_id){%>
                                            <option value="<%=categoria.id%>" selected><%=categoria.name%></option>
                                            <%} else{%>
                                                <option value="<%=categoria.id%>"><%=categoria.name%></option>
                                            <%}%>
                                      <%})%>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="">Color</label>
                                  <select  name="color" class="custom-select" id="validationCustom04" required>
                                    <option selected disabled value="#">Seleccione color</option>
                                    <%colores.forEach((color)=>{%>
                                        <%if(color.id == producto.color_id){%>
                                    <option value="<%=color.id%>" selected><%=color.name%></option>
                                    <%} else{%>
                                        <option value="<%=color.id%>"><%=color.name%></option>
                                        <%}%>
                                    <%})%>
                                  </select>
                              </div>

                              <div class="form-group">
                                <label for="">Marca</label>
                              <select  name="marca" class="custom-select" id="validationCustom04" required>
                                <option selected disabled value="#">Seleccione marca</option>
                                <%marcas.forEach((marca)=>{%>
                                    <%if(marca.id == producto.brand_id){%>
                                <option value="<%=marca.id%>" selected><%=marca.name%></option>
                                <%} else{%>
                                    <option value="<%=marca.id%>"><%=marca.name%></option>
                                    <%}%>
                                <%})%>
                              </select>
                          </div>
                                <div class="form-group">
                                    <button type="submit" class="boton-continuar">Actualizar</button>
                                    <a href="/admin" class="boton-continuar">Volver</a>
                                </div>
                                
                            </form>
                    </div>                        
                    </div>
                </div>
            </div>
     <%- include('../partials/footer.ejs') %>
</body>
</html>